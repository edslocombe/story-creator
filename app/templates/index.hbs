{{content-editable
  class="story-title"
  value=model.title
  tagName="h1"
  placeholder="Story Title"}}

<div class="specification">
  {{#each scenario in model.scenarios}}
    {{story-scenario title=scenario.title steps=scenario.steps}}
  {{/each}}
  <button {{action 'addScenario'}}>Add scenario</button>
</div>

{{outlet}}
